/* pages/fake/fake.wxss */

.container {
  background: #f2f2f2;
  min-height: 100vh;
  text-align: center;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}

page {
  overflow: hidden;
  background: #0d1740;
}

.scroll-box {
  white-space: nowrap;
  height: 105vh;
}

.card-box {
  display: inline-block;
}

.card {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  height: 80vh;
  width: 80vw;
  margin: 6vh 10vw;
  font-size: 40px;
  border-radius: 4px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  min-height: 800rpx;
  background: #fff;
}
